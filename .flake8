[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.pyc,
    *.egg-info,
    .eggs
per-file-ignores =
    # Ignore import position in alembic env.py
    alembic/env.py: E402
    # Ignore F401 (unused imports) in __init__.py files
    __init__.py: F401
    # Ignore line length in migrations
    migrations/*.py: E501
